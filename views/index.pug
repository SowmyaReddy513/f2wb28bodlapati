extends layout

block content
  h1= title
  p Welcome to Pug using  #{title}
  br
  br
  button(type="button", class="btn btn-secondary", onClick = "doBump()" ) Press Me
  br
  br
  div(id="bump")
    p Bump the count
  script. 
    var count = 0;
    var bump = 1;
    function doBump(){
      count = count + bump; 
      bump = bump+1;
      document.getElementById("bump").innerHTML = `Count ${count} with bump ${bump}`;
    }
  a(href='housing') Housing Page


  
